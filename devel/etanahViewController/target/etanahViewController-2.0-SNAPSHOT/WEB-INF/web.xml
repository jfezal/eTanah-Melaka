    <servlet>
        <servlet-name>XFireServlet</servlet-name>
        <servlet-class>
            org.codehaus.xfire.transport.http.XFireConfigurableServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>org.directwebremoting.guice.DwrGuiceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintServlet</servlet-name>
        <servlet-class>etanah.servlet.PrintServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saveDocuments</servlet-name>
        <servlet-class>etanah.view.dokumen.SaveDocuments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintReportServlet</servlet-name>
        <servlet-class>etanah.servlet.PrintReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReceiptCukaiServlet</servlet-name>
        <servlet-class>etanah.servlet.ReceiptCukaiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportGeneratorServlet</servlet-name>
        <servlet-class>etanah.servlet.ReportGeneratorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>etanah.servlet.ImageServlet</servlet-class>
    </servlet>
    <servlet>   
        <description></description>
        <display-name>DownloadServlet</display-name>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>etanah.view.strata.DownloadGISFile</servlet-class>   
    </servlet>   
    <servlet-mapping>   
        <servlet-name>DownloadServlet</servlet-name>   
        <url-pattern>/workflow/DownloadServlet</url-pattern>   
    </servlet-mapping>  
    <servlet-mapping>
        <servlet-name>XFireServlet</servlet-name>
        <url-pattern>/servlet/XFireServlet/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>XFireServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <filter>
        <display-name>Stripes Filter</display-name>
        <filter-name>StripesFilter</filter-name>
        <!--<filter-class>net.sourceforge.stripes.controller.StripesFilter</filter-class>-->
        <filter-class>net.sourceforge.stripes.security.controller.StripesSecurityFilter</filter-class> 
        <init-param>
            <param-name>ActionResolver.Packages</param-name>
            <param-value>
                etanah.view
            </param-value>
        </init-param>
        <init-param>
            <param-name>Extension.Packages</param-name>
            <param-value>able.stripes,etanah.view</param-value>
        </init-param>
        <init-param>
            <param-name>PopulationStrategy.Class</param-name>
            <param-value>net.sourceforge.stripes.tag.BeanFirstPopulationStrategy</param-value>
        </init-param>
        <init-param>
            <param-name>LocalePicker.Locales</param-name>
            <param-value>ms</param-value>
        </init-param>
        <init-param>
            <param-name>ExceptionHandler.Class</param-name>
            <param-value>etanah.view.ExceptionHandler</param-value>
        </init-param>
        <init-param>
            <param-name>SecurityManager.Class</param-name>
            <param-value>etanah.manager.SecurityManager</param-value>
        </init-param>
        <init-param>
            <param-name>Interceptor.Classes</param-name>
            <param-value>
                net.sourceforge.stripes.security.controller.SecurityInterceptor
            </param-value>
        </init-param>
        <init-param>
            <param-name>UnauthorizedResolutionURL</param-name>
            <param-value>/WEB-INF/jsp/unauthorized.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>FileUpload.MaximumPostSize</param-name>
            <param-value>100mb</param-value>
        </init-param>
    </filter>    
    <filter>
        <filter-name>DynamicMappingFilter</filter-name>
        <filter-class>net.sourceforge.stripes.controller.DynamicMappingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>GuiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>
